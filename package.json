{
  "name": "youtube",
  "version": "1.0.0",
  "description": "Proyek ini terdiri dari dua bagian utama:\r - `ytuploader-backend`: Server backend yang ditulis dengan Node.js.\r - `ytuploader-frontend`: Aplikasi frontend yang dibuat dengan React.",
  "main": "main.js",
  "homepage": "./",
  "scripts": {
    "start": "electron .",
    "dev": "ELECTRON_IS_DEV=true electron .",
    "build": "electron-builder",
    "build-win": "electron-builder --win --dir --publish=never",
    "build-mac": "electron-builder --mac",
    "build-linux": "electron-builder --linux",
    "dist": "npm run build",
    "postinstall": "electron-builder install-app-deps",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "build": {
    "appId": "com.youtube.uploader",
    "productName": "YouTube Uploader",
    "directories": {
      "output": "release"
    },
    "asar": true,
    "files": [
      "**/*",
      "!release/**/*",
      "!build/**/*",
      "!**/node_modules/**/*"
    ],
    "win": {
      "target": "portable"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico",
      "installerHeaderIcon": "assets/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "YouTube Uploader"
    }
  },
  "dependencies": {
    "serve": "^14.2.5"
  },
  "devDependencies": {
    "electron": "^38.2.2",
    "electron-builder": "^26.0.12",
    "pm2": "^6.0.13"
  }
}
